@foreach (var item in Model.Take(5))
{
<div class="card" style="width: 80vw;">
    <button class="btn btn-dark"><a asp-action="Details" asp-route-id="@item.BlogId">Details</a></button>
    <div class="card-body">
        <h5 class="card-title" style=""> @Html.DisplayFor(modelItem => item.BlogTitle)</h5>
        <p class="card-text">@Html.DisplayFor(modelItem => item.BlogContent)</p>

    </div>

</div>
