@model IEnumerable<PWA_Blog_Application.Models.Blog>

@{ ViewData["Title"] = "Create Blog"; }

<h1 style="color:white;">Top 5 Blogs</h1>

<p>
    <button type="button" class="btn btn-dark">
        <a asp-action="Create" style="color:white;">Create New</a>
    </button>
</p>

@*              @Html.DisplayNameFor(model => model.blog_content)

    @Html.DisplayNameFor(model => model.auther_name)
